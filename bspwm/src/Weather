#!/usr/bin/env bash

# ===== Configuration =====
KEY="29bc9996b197446d504a19298205e80e"
CITY="Moscow"  # Укажите город в России
UNITS="metric" # Доступные: "metric" (°C) или "imperial" (°F)
CACHE_DIR="${XDG_CACHE_HOME:-$HOME/.cache}/$USER"
CACHE_FILE="$CACHE_DIR/weather_data"
CACHE_TIMEOUT=900  # 15 минут в секундах

get_weather_data() {
    local encoded_city=$(sed 's/ /%20/g' <<< "$CITY")
    local url="https://api.openweathermap.org/data/2.5/weather?q=$encoded_city&appid=$KEY&units=$UNITS&lang=ru"

    # Используем кеш, если он актуален
    if [[ -f "$CACHE_FILE" ]]; then
        local now=$(date +%s)
        local file_age=$(stat -c %Y "$CACHE_FILE")
        (( now - file_age < CACHE_TIMEOUT )) && cat "$CACHE_FILE" && return
    fi

    # Запрос новых данных
    if ! response=$(curl -sf --max-time 5 --show-error "$url"); then
        [[ -f "$CACHE_FILE" ]] && cat "$CACHE_FILE" || exit 1
    else
        echo "$response" | tee "$CACHE_FILE"
    fi
}

parse_weather_values() {
    local data=$1
    declare -gA WEATHER=(
        ["temp"]=$(jq -r '.main.temp | round' <<< "$data")
        ["feels"]=$(jq -r '.main.feels_like | round' <<< "$data")
        ["desc"]=$(jq -r '.weather[0].description' <<< "$data")
        ["icon"]=$(jq -r '.weather[0].icon' <<< "$data")
    )
}

get_weather_icon() {
    case "$1" in
        "01d") echo "" ;;    # Ясное солнце
        "01n") echo "" ;;    # Ясная ночь
        "02d") echo "" ;;    # Переменная облачность (день)
        "02n") echo "" ;;    # Переменная облачность (ночь)
        "03d"|"03n") echo "" ;;  # Облачно
        "04d"|"04n") echo "" ;;  # Пасмурно
        "09d"|"09n") echo "" ;;  # Дождь
        "10d") echo "" ;;    # Ливень (день)
        "10n") echo "" ;;    # Ливень (ночь)
        "11d"|"11n") echo "" ;;  # Гроза
        "13d"|"13n") echo "" ;;  # Снег
        "50d"|"50n") echo "" ;;  # Туман
        *) echo "" ;;        # Неизвестно
    esac
}

get_weather_hex() {
    case "${1%?}" in
        "01") echo "#ffd86b" ;;
        "02"|"03"|"04") echo "#adadff" ;;
        "09"|"10") echo "#6b95ff" ;;
        "11") echo "#ffeb57" ;;
        "13") echo "#e3e6fc" ;;
        "50") echo "#84afdb" ;;
        *) echo "#adadff" ;;
    esac
}

mkdir -p "$CACHE_DIR"

weather_data=$(get_weather_data || exit 1)
parse_weather_values "$weather_data"

case "$1" in
    "current_temp")
        echo "${WEATHER[temp]}"
        ;;
    "current_temp_fahrenheit")
        echo "$(( (${WEATHER[temp]} * 9 / 5) + 32 ))°F"
        ;;
    "feels_like")
        echo "${WEATHER[feels]}°C"
        ;;
    "weather_desc")
        echo "${WEATHER[desc]^}"
        ;;
    "icon")
        get_weather_icon "${WEATHER[icon]}"
        ;;
    "hex")
        get_weather_hex "${WEATHER[icon]}"
        ;;
    "full")
        echo "$weather_data"
        ;;
    "city")
        echo "$CITY"
        ;;
    "wmodule")
        icon=$(get_weather_icon "${WEATHER[icon]}")
        hex=$(get_weather_hex "${WEATHER[icon]}")
        printf "%%{F%s}%s%%{F-} %s°\n" "$hex" "$icon" "${WEATHER[temp]}"
        ;;
    *)
        echo "Неверная опция"
        exit 1
        ;;
esac

